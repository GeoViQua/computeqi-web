<%= javascript_include_tag "export" %>
<%= javascript_include_tag "highcharts/highcharts" %>
<%= javascript_include_tag "flot/jquery.flot" %>
<%= javascript_include_tag "flot/jquery.flot.errorbars" %>
<%= javascript_include_tag "flot/jquery.flot.axislabels" %>
<%= javascript_include_tag "charts" %>

<script>
var values;
var scorePlot;
var outputPlot;

$(function() {
  // load in values, should be ajax really
  values = <%= @validation.to_hash.to_json.html_safe %>;

  // create score plot
  scorePlot = createValidationPlot('score-plot-container', values);

  // flot has some plotting issues if not visible
  $('a[data-toggle="tab"]').on('shown', function(e) {
    if ($(e.target).attr('href') == '#output-plot' && outputPlot == null) {
      outputPlot = createValidationOutputPlot('output-plot-container', values, { xlabel: 'Observed', ylabel: 'Predicted' });
      outputPlot.draw();
    }
  });
});
</script>


<%= render partial: "shared/toolbar", locals: { text: "Performed validation on #{pluralize(@validation.predicted.size, 'prediction')}. RMSE is #{number_with_precision(@validation.rmse, precision: 3)}.", parent: @project, object: @validation, export_options: ["json"] } %>

<div class="row">
  <div class="span12">
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#score-plot" data-toggle="tab">Standard score</a></li>
        <li><a href="#output-plot" data-toggle="tab">Output comparison</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="score-plot">
          <div id="score-plot-container" class="plot"></div>
        </div>
        <div class="tab-pane" id="output-plot">
          <div id="output-plot-container" class="plot square"></div>
        </div>
      </div>
    </div>
  </div>
</div>