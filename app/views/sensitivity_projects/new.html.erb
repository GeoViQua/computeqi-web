<div class="page-header">
  <h1>Sensitivity analysis project</h1>
</div>

<div class="row">
  <div class="span7">
    <%= simple_form_for @project, :html => { :class => "form-horizontal" } do |f| %>
      <fieldset>
        <legend>Using an emulator</legend>
        <%= f.input :emulator_project, include_blank: false, collection: current_user.emulator_projects.collect {|project| [project.name, project.id] } %>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span7">
    <%= simple_form_for @project, :html => { :class => "form-horizontal" } do |f| %>
      <%= render partial: "shared/simulator_select", locals: { form: f, legend: "Using a simulator" } %>
      
      <div class="form-actions">
        <%= f.button :submit, disabled: 'disabled' %>
      </div>
    <% end %>
  </div>
</div>