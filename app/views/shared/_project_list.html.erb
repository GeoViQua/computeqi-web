<div class="row<%= " space-bottom" if projects.size > 0 %>">
  <div class="span12">
    <%= link_to "Build a new #{type} project", send("new_#{type}_project_path") %>
  </div>
</div>

<% projects.each_with_index do |project, index| %>
  <% if index % 3 == 0 %>
    <div class="row<%= " space-bottom" if projects.size > index + 3 %>">
  <% end %>
  <div class="span4">
    <div class="box">
      <div class="box-header">  
        <h3><%= link_to project.name, project %></h3>
      </div>
      <div class="box-content">
        <%= render partial: "project", locals: { project: project } %>
        <%= link_to "remove", project, :confirm => "Are you sure you want to delete this project?", :method => :delete %>
      </div>
    </div>
  </div>
  <% if (index + 1) % 3 == 0 or (index + 1) == projects.size %>
    </div>
  <% end %>
<% end %>