<div class="row<%= " space-bottom" if projects.size > 0 %>">
  <div class="span8">
    <div class="toolbar-info">
      
    </div>
  </div>
  <div class="span4">
    <div class="btn-toolbar pull-left">
      <div class="btn-group">
        <%= link_to "Create #{type} project", send("new_#{type}_project_path"), class: "btn" %>
      </div>
    </div>
  </div>
</div>

<% projects.each_with_index do |project, index| %>
  <% if index % 3 == 0 %>
    <div class="row<%= " space-bottom" if projects.size > index + 3 %>">
  <% end %>
  <div class="span4">
    <h3>
      <%= link_to project.name, project %>
      <span class="pull-right">
        <%= project_status_icon(project) %>
        <%= link_to project, :confirm => "Are you sure you want to delete this project?", :method => :delete do %>
          <i class="icon-trash" title="Delete" rel="tooltip"></i>
        <% end %>
      </span>
    </h3>
    <%= render partial: "project", locals: { project: project } %>
  </div>
  <% if (index + 1) % 3 == 0 or (index + 1) == projects.size %>
    </div>
  <% end %>
<% end %>