<div class="row<%= " space" if projects.size > 0 %>">
  <div class="span12">
    <div class="boxed clickable">
      <h3>
        <%= link_to send("new_#{type}_project_path") do %>
          <i class="icon-plus-sign"></i>
          <!-- <span class="pre-icon">&#43;</span> --> Create
        <% end %>
      </h3>
      <p>Build a new <%= type %> project</p>
    </div>
  </div>
</div>

<% projects.each_with_index do |project, index| %>
  <% if index % 3 == 0 %>
    <div class="row<%= " space" if projects.size > index + 3 %>">
  <% end %>
  <div class="span4">
    <div class="boxed clickable">
      <%= render partial: "project", locals: { project: project } %>
    </div>
  </div>
  <% if (index + 1) % 3 == 0 or (index + 1) == projects.size %>
    </div>
  <% end %>
<% end %>